<!DOCTYPE html>
<html lang="en">

<head>

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Blueciola dev </title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    </head>

<body>


    <div class="container ">

        <h1 style="text-align: center;">
            <%= title %>
        </h1>

        <form action="/add" method="POST">
            <legend>
                Add a Task
            </legend>
            <div class="form-group">
                <input type="text" name="title" class="form-control" id="title">
            </div>
            <div class="form-group">
                <textarea placeholder="add a description" class="form-control" name="description" id="" cols="80"
                    rows="1"></textarea>
            </div>
            <button class="btn btn-primary">
                Add
            </button>

        </form>
        <hr>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>

                </tr>
            </thead>
            <tbody>
                <% for (var i=0 ; i < tasks.length; i++){ %>

                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <strong>
                                <%= tasks[i].title %>
                            </strong>
                        </td>
                        <td>
                            <%= tasks[i].description %>
                        </td>
                        <td>
                            <a class="<%= tasks[i].status  ? ' btn -btn-success' : 'btn btn-dark' %>"
                                href="/turn/<%= tasks[i]._id %>">Done</a>


                            <a id="delete" class="btn btn-danger" href="/delete/<%= tasks[i]._id %>">Delete</a>
                        </td>
                    </tr>

                    <% } %>
            </tbody>
        </table>

    </div>

    <script>
        document.getElementById('title').focus();
        document.getElementById('delete').addEventListener('click', (e) => {
            let response = confirm('are you sure you want to delete??');
            if (!response) {
                e.preventDefault();


            }

        });
    </script>

</body>

</html>